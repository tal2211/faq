<?xml version="1.0"?>
<widgets>
  <widgetlinks_links type="mike_faq/widget" translate="name description" module="mike_faq">
    <name>Show faq list</name>
    <description>Show faq list, random or by ids</description>
    <parameters>
      <view_options>
        <label>Widget Options</label>
        <description>Show all random faqs</description>
        <visible>1</visible>
        <required>1</required>
        <type>multiselect</type>
        <source_model>mike_faq/options</source_model>
      </view_options>
      <ids_list>
        <label>Faq item ids</label>
        <description>Enter ids divided by comma</description>
        <visible>1</visible>
        <required>0</required>
        <type>text</type>
      </ids_list>
    </parameters>
  </widgetlinks_links>
</widgets>
